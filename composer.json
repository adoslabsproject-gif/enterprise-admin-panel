{
    "name": "ados-labs/enterprise-admin-panel",
    "description": "Enterprise Lightning Framework Package 0: Admin panel with cryptographic dynamic URLs, multi-channel 2FA, and modular architecture",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "admin",
        "panel",
        "dashboard",
        "2fa",
        "modular",
        "enterprise",
        "security",
        "hmac",
        "cryptographic",
        "elf"
    ],
    "authors": [
        {
            "name": "ADOS Labs",
            "email": "ados.labsproject@gmail.com"
        }
    ],
    "homepage": "https://github.com/adoslabsproject-gif/enterprise-admin-panel",
    "support": {
        "issues": "https://github.com/adoslabsproject-gif/enterprise-admin-panel/issues",
        "source": "https://github.com/adoslabsproject-gif/enterprise-admin-panel"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../enterprise-security-shield",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../enterprise-psr3-logger",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/log": "^3.0",
        "psr/http-message": "^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "ados-labs/enterprise-security-shield": "@dev",
        "ados-labs/enterprise-psr3-logger": "@dev"
    },
    "suggest": {
        "ados-labs/enterprise-bootstrap": "Application foundation with caching and should_log() function",
        "ados-labs/enterprise-security-shield": "WAF, Honeypot, and Bot Protection - auto-registers Security tab",
        "ados-labs/enterprise-psr3-logger": "PSR-3 logger with database handler - auto-registers Logs tab",
        "ados-labs/database-pool": "Connection pooling with circuit breaker - auto-registers Database tab",
        "ext-redis": "Required for Redis session/cache support"
    },
    "autoload": {
        "psr-4": {
            "AdosLabs\\AdminPanel\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AdosLabs\\AdminPanel\\Tests\\": "tests/"
        }
    },
    "extra": {
        "admin-panel": {
            "modules-discovery": true,
            "auto-register-routes": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse src --level=8"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
