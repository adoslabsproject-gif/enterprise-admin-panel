# ============================================================================
# ENTERPRISE ADMIN PANEL - Environment Configuration
# ============================================================================
# Copy this file to your project root as .env and customize values.
# NEVER commit .env to version control!
# ============================================================================

# Application
APP_NAME="Enterprise Admin"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# ============================================================================
# ENCRYPTION KEY (CRITICAL - Required for sensitive data encryption)
# ============================================================================
# Generate with: php -r "echo bin2hex(random_bytes(32));"
# This key encrypts: admin URL, HMAC secrets, API keys in the database.
# LOSING THIS KEY = LOSING ACCESS TO ADMIN PANEL!
# NEVER share this key. Back it up securely.
APP_KEY=

# ============================================================================
# DATABASE (Required)
# ============================================================================
DB_DRIVER=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=enterprise
DB_USERNAME=admin
DB_PASSWORD=secret

# Connection Pool Settings
DB_POOL_SIZE=10
DB_POOL_IDLE_TIMEOUT=60
DB_PERSISTENT=true

# Circuit Breaker Settings
DB_CIRCUIT_FAILURE_THRESHOLD=5
DB_CIRCUIT_RECOVERY_TIME=30

# ============================================================================
# CACHE (Redis recommended, falls back to database)
# ============================================================================
CACHE_DRIVER=redis

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DATABASE=0
REDIS_TIMEOUT=0.5

# Database Cache Fallback (used if Redis unavailable)
CACHE_TABLE=cache

# ============================================================================
# SESSION
# ============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=60
SESSION_SECURE_COOKIE=false

# ============================================================================
# LOGGING
# ============================================================================
LOG_CHANNEL=database
LOG_LEVEL=debug

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_LOG_LEVEL=error

# ============================================================================
# MAIL (for notifications)
# ============================================================================
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS=admin@localhost
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# SECURITY
# ============================================================================
# Master secret for token generation (auto-generated on install)
# MASTER_SECRET=

# Admin panel entry point (auto-generated, random filename)
# ADMIN_ENTRY_POINT=

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true
